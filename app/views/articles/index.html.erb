
<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">show</th>
        <th scope="col">Update</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
  <% @articles.each do |i| %>
    <tbody>
      <tr>
        <td><%= i.id %></td>
        <td><%= i.title %></td>
        <td><%= i.description %></td>
        <td><%= link_to 'show', i %></td>
        <td><%= link_to 'Update', edit_article_path(i) %></td>
        <td><%= link_to "Delete", article_path(i), data:{method: :delete, confirm: "Are you Sure?"}%></td>   
      </tbody>
  <% end %>
      
</table>