<h1>ALL Brodcast</h1>

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">show</th>
        <th scope="col">Update</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
  <% @brodcasts.each do |i| %>
    <tbody>
      <tr>
        <td><%= i.id %></td>
        <td><%= i.title %></td>
        <td><%= i.description %></td>
        <td><%= link_to 'show', brodcast_path(i) %></td> 
        <td><%= link_to 'Update', edit_brodcast_path(i) %></td>
       <td><%= link_to "Delete", brodcast_path(i), data:{method: :delete, confirm: "Are you Sure?"}%></td>   
     
        
        </tbody>
  <% end %>
      
</table>