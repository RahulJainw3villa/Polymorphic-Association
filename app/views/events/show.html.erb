<h3>Event</h3>
<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Discription</th>
        <th scope="col">Update</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
        <td><%= @event.title %></td>
        <td><%= @event.id %></td>
         <td><%= @event.description %></td>     
         <td><%= link_to 'Update', edit_event_path(@event) %></td>
        <td><%= link_to "Delete", event_path(@event), data:{method: :delete, confirm: "Are you Sure?"}%></td>   
</table>








